                <label for="exampleInputEmail">Nationalite</label>
                <input type="Email" class="form-control" id="exampleInputNationalite">
            </div>
            <div class="form-group">
                <label for="exampleInputProfession">Profession</label>
                <input type="text" class="form-control" id="exampleInputProfession">
            </div>
            <div class="form-group">
                <label for="exampleInputDomicile">Domicile</label>
                <input type="text" class="form-control" id="exampleInputDomicile">
            </div>
            <div class="form-group">
                <label for="exampleInputDate">Date de Naissance</label>
                <input type="date" class="form-control" id="exampleInputDate">
            </div>
            <div class="form-group">
                <label for="exampleInputSexe">Sexe</label>
                <input type="text" class="form-control" id="exampleInputSexe" placeholder="Masculin ou feminin">
            </div>
            <div class="form-group">
                <label for="exampleInputEmail">Telephone</label>
                <input type="Number" class="form-control" id="exampleInputtelephone" placeholder="+237xxxxxxxx">
            </div>
            <div class="form-group">
                <label for="exampleInputArrondissement">Arrondissement</label>
                <input type="text" class="form-control" id="exampleInputArrondissement" placeholder="Entrer votre Arrondissement">
            </div>
            <div class="form-group">
                <label for="exampleInputPhoto">photo d'identite</label>
                <input type="file" id="exampleInputPhoto">
                <p class="help-block">Entrer une photo d'identite</p>
            </div>
        </div><!-- /.box-body -->
        <div class="box-footer">
            <button type="submit" class="btn btn-primary btn-flat btn-sm btn-block"><span class="glyphicon glyphicon glyphicon-chevron-right"></span>Next</button>
        </div><!-- /.box-footer-->
    </div><!-- /.box -->
</div>
