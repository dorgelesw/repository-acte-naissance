<h1>Faites une declaration</h1>

<div id="declarant" style="visibility:hidden">

    <div class="box box-solid box-primary">
        <div class="box-header with-border">
            <h3 class="box-title">INFORMATIONS SUR LE DECLARANT</h3>
            <div class="box-tools pull-right">
                <button class="btn btn-box-tool" data-widget="collapse" data-toggle="tooltip" title="Collapse"><i class="fa fa-minus"></i></button>

            </div>
        </div>
        <div class="box-body">
            <div class="form-group">
                <label>Nom Complet</label>
                <input type="text" class="form-control" id="decl_name">
            </div>
            <div class="form-group">
                <label>Nationalite</label>
                <select id="nationalite_decl" class="form-control select2 select2-hidden-accessible" tabindex="-1" aria-hidden="true">
                    <option selected="selected">Camerounais</option>
                    <option>senegalais</option>
                    <option>tchadiens</option>
                </select>
            </div>
            <div class="form-group">
                <label>Profession</label>
                <input type="text" id="decl_prof"class="form-control">
            </div>
            <div class="form-group">
                <label>Domicile</label>
                <input type="text" class="form-control" id="decl_domicile">
            </div>
            <div class="form-group">
                <label>Date de Naissance</label>
                <input type="date" class="form-control" id="decl_date">
            </div>
            <div class="form-group">
                <label>Sexe</label>
                <select id="decl_sexe" class="form-control select2 select2-hidden-accessible" tabindex="-1" aria-hidden="true">
                    <option selected="selected">M</option>
                    <option>F</option>
                </select>
            </div>
            <div class="form-group">
                <label>Telephone</label>
                <input type="tel" class="form-control" id="decl_tel" placeholder="+237xxxxxxxx">
            </div>
            <div class="form-group">
                <label>Arrondissement</label>
                <select id="decl_arr" class="form-control select2 select2-hidden-accessible" tabindex="-1" aria-hidden="true">
                    <option selected="selected">Nde</option>
                    <option>Mifi</option>
                    <option>Ntem</option>
                </select>
                
            </div>
            <div class="form-group">
                <label>photo d'identite</label>
                <input type="file" id="exampleInputPhoto">
                <p class="help-block">Entrer une photo d'identite</p>
            </div>
        </div><!-- /.box-body -->
        <div class="box-footer">
            <button type="button" id="next1"  class="btn btn-primary btn-flat btn-sm btn-block"><span class="glyphicon glyphicon glyphicon-chevron-right"></span>suivant</button>
        </div><!-- /.box-footer-->
    </div><!-- /.box -->
</div>
