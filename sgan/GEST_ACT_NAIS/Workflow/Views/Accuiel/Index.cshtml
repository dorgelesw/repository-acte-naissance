@model P7GestAct.Models.DataClass.Declaration
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Accueil";
}


<h1>Faites une declaration</h1>

<div id="declarant" style="visibility:hidden">

    <div class="box box-solid box-primary">
        <div class="box-header with-border">
            <h3 class="box-title">Informations sur le declarant</h3>
            <div class="box-tools pull-right">
                <button class="btn btn-box-tool" data-widget="collapse" data-toggle="tooltip" title="Collapse"><i class="fa fa-minus"></i></button>

            </div>
        </div>
        <div class="box-body">
            <div class="form-group">
                <label for="exampleInputNom">Nom Complet</label>
                <input type="text" class="form-control" id="decl_name">
            </div>
            <div class="form-group">
                <label>Nationalite</label>
                <input type="Email" id="decl_nat"class="form-control">
            </div>
            <div class="form-group">
                <label>Profession</label>
                <input type="text" id="decl_prof"class="form-control">
            </div>
            <div class="form-group">
                <label>Domicile</label>
                <input type="text" class="form-control" id="decl_domicile">
            </div>
            <div class="form-group">
                <label for="exampleInputDate">Date de Naissance</label>
                <input type="text" class="form-control" id="decl_date">
            </div>
            <div class="form-group">
                <label>Sexe</label>
                <input type="text" class="form-control" id="decl_sexe" placeholder="Masculin ou feminin">
            </div>
            <div class="form-group">
                <label for="exampleInputEmail">Telephone</label>
                <input type="Number" class="form-control" id="decl_tel" placeholder="+237xxxxxxxx">
            </div>
            <div class="form-group">
                <label for="exampleInputArrondissement">Arrondissement</label>
                <input type="text" class="form-control" id="decl_arr" placeholder="Entrer votre Arrondissement">
            </div>
            <div class="form-group">
                <label for="exampleInputPhoto">photo d'identite</label>
                <input type="file" id="exampleInputPhoto">
                <p class="help-block">Entrer une photo d'identite</p>
            </div>
        </div><!-- /.box-body -->
    </div><!-- /.box -->
</div>
<div id="declaration" style="visibility:hidden">
    <div class="box box-solid box-primary">
        <div class="box-header with-border">
            <h3 class="box-title">Informations sur la  declaration</h3>
            <div class="box-tools pull-right">
                <button class="btn btn-box-tool" data-widget="collapse" data-toggle="tooltip" title="Collapse"><i class="fa fa-minus"></i></button>

            </div>
        </div>
        <div class="box-body">

            <div class="form-group">
                <label>Date</label>
                @Html.EditorFor(model => model.D_Date_Heure, new { htmlAttributes = new { @class = "form-control" } })
            </div>
            <div class="form-group">
                <label>Heure</label>
                @Html.EditorFor(model => model.D_Date_Heure, new { htmlAttributes = new { @class = "form-control" } })
            </div>
            <div class="form-group">
                <label>Lieu</label>
                @Html.EditorFor(model => model.D_Lieu, new { htmlAttributes = new { @class = "form-control" } })
            </div>
            <div class="form-group">
                <label>Nom du declarant</label>
                @Html.EditorFor(model => model.D_Name, new { htmlAttributes = new { @class = "form-control" } })
            </div>
        </div><!-- /.box-body -->
        
    </div><!-- /.box -->
</div>

<div id="naissance" style="visibility:hidden">
    <div class="box box-solid box-primary">
        <div class="box-header with-border">
            <h3 class="box-title">Informations sur l'enfant</h3>
            <div class="box-tools pull-right">
                <button class="btn btn-box-tool" data-widget="collapse" data-toggle="tooltip" title="Collapse"><i class="fa fa-minus"></i></button>

            </div>
        </div>
        <div class="box-body">
            <div class="form-group">
                <label for="exampleInputNom">Noms(s)</label>
                <input type="text" class="form-control" id="naissNom">
            </div>
            <div class="form-group">
                <label for="exampleInputPrenom">Prenom(s)</label>
                <input type="text" class="form-control" id="naissPrenom">
            </div>
            <div class="form-group">
                <label for="exampleInputDate">Date de Naissance</label>
                <input type="date" class="form-control" id="naissDate">
            </div>
            <div class="form-group">
                <label for="exampleInputHeure">Heure</label>
                <input type="date" class="form-control" id="naissHeure">
            </div>
            <div class="form-group">
                <label for="exampleInputLieu">Lieu de Naissance</label>
                <input type="text" class="form-control" id="naissLieu">
            </div>
            <div class="form-group">
                <label>Sexe</label>
                <select id="sexeid" class="form-control select2 select2-hidden-accessible" tabindex="-1" aria-hidden="true">
                    <option selected="selected">Homme</option>
                    <option>Femme</option>
                </select>
            </div>
            <br />
            <div class="form-group">
                <label>Filiation</label>
                <select id="filiationID" class="form-control select2 select2-hidden-accessible" tabindex="-1" aria-hidden="true">
                    <option selected="selected">Adoptif</option>
                    <option>Legitime</option>
                </select>
            </div>
        </div><!-- /.box-body -->
        
    </div><!-- /.box -->
</div>

